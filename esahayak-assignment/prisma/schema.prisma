datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Buyer {
  id           String   @id @default(uuid())
  fullName     String
  email        String?
  phone        String
  city         String
  propertyType String
  bhk          String?
  purpose      String
  budgetMin    Int?
  budgetMax    Int?
  timeline     String
  source       String
  status       String   @default("New")
  notes        String?
  tags         String?   // âœ… changed from String[] to String
  ownerId      String
  updatedAt    DateTime @updatedAt
  history      BuyerHistory[]
}


model BuyerHistory {
  id        String   @id @default(uuid())
  buyerId   String
  changedBy String
  changedAt DateTime @default(now())
  diff      Json

  buyer     Buyer    @relation(fields: [buyerId], references: [id])
}
